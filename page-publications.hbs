{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content publications" role="main">

    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        <div class="noarticleimage">
            <div class="post-meta">
                <h1 class="post-title">{{{title}}}</h1>
                 <div class="custom-links">
                    <a href="http://scholar.google.co.uk/citations?user=10N53SYAAAAJ&hl=en" target="_blank">Google Scholar</a>&nbsp;&nbsp;<i class="fa fa-dot-circle-o"></i>&nbsp;&nbsp;
                    <a href="http://dblp.uni-trier.de/pers/hd/k/Kiefer:Franziskus.html" target="_blank">DBLP</a>
                </div>
            </div>
        </div>
        
        {{! Each post has the blog logo at the top, with a link back to the home page }}

            <section class="post-content publications">
		        {{content}}
            </section>

	    {{/post}}

    </article>

</main>

<footer class="bottom-closer">
    <div class="inner">
        <a href="{{@blog.url}}" class="btn">Back to Overview</a>
    </div>
</footer>
