{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content post" role="main">

    <article class="{{post_class}}">
        
        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}
        
        <div class="noarticleimage">
            <div class="post-meta">
                <h1 class="post-title">{{{title}}}</h1>
                <div class="cf post-meta-text">
                    <!--<div class="author-image" style="background-image: url({{author.image}})"></div>-->
                    <!--<h4 class="author-name" itemprop="author" itemscope itemtype="http://schema.org/Person">{{author.name}}</h4> on-->
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time>
                    {{tags prefix=", tagged on " separator=", "}}
                </div>
            </div>
        </div>
        
        <section class="post-content">
            <div class="post-reading">
                <span class="post-reading-time"></span> read
            </div>
            <a name="topofpage"></a>
            {{content}}
        </section>

        <footer class="post-footer">

            <section class="share">
                <a href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <i class="fa fa-twitter"></i>
                </a>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <i class="fa fa-facebook"></i>
                </a>
                <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <i class="fa fa-google-plus"></i>
                </a>
            </section>

        </footer>
            
        {{/post}}

    </article>

</main>

<footer class="bottom-closer">
    <div class="inner">
        <a href="/" class="btn">Back to Overview</a>
    </div>
</footer>